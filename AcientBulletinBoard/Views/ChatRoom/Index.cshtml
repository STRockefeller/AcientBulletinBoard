@model ChatRoomModel
    <center>
        <h3><b>Chat Room</b></h3>
        <div class="card border-primary">
            <img class="card-img-top" src="holder.js/100x180/" alt="">
            <div class="card-body">
                <h4 class="card-title">Chat Room</h4>
                <div class="container">
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-2">User</div>
                        <div class="col-4"><input asp-for="@AcientBulletinBoard.Services.Helper._userData.name" type="text" id="userInput" readonly/></div>
                    </div>
                    <div class="row">
                        <div class="col-2">Message</div>
                        <div class="col-4"><input type="text" id="messageInput" /></div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-primary" id="sendButton" value="Send Message">Send Message</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <ul id="messagesList"></ul>
                    </div>
                </div>
            </div>
        </div>
    </center>

    @section Scripts{
        <script src="~/js/signalr/dist/browser/signalr.js"></script>
        <script>
    var connection = new signalR.HubConnectionBuilder().withUrl("/chatRoomHub").build();

        connection.on("ReceiveMessage", function (user, message) {
        var li = document.createElement("li");
        li.textContent = user+" : "+message;
        document.getElementById("messagesList").appendChild(li);
    });

    connection.start().catch(function (err) {
        return console.error(err.toString());
    });

    document.getElementById("sendButton").addEventListener("click", function (event) {
        var user = "@AcientBulletinBoard.Services.Helper._userData.name";
        var message = document.getElementById("messageInput").value;
        connection.invoke("SendMessage", user, message).catch(function (err) {
            return console.error(err.toString());
        });
        event.preventDefault();
    });
        </script>
        @*<script>var exports = { "__esModule": true };</script>
            <script src="~/js/ChatRoomIndex.js"></script>*@
    }